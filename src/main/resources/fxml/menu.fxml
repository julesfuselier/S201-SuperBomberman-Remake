<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.superbomberman.controller.MenuController"
           prefWidth="600" prefHeight="385">

    <!-- Image de fond -->
    <ImageView fitWidth="800" fitHeight="1000" preserveRatio="true">
        <Image url="@../images/menu_background.jpg" />
    </ImageView>

    <!-- Contenu principal -->
    <VBox alignment="CENTER_LEFT" spacing="30">
        <padding>
            <Insets bottom="50" left="50" right="50" top="50" />
        </padding>

        <!-- Titre du jeu -->
        <Label text="SUPER BOMBERMAN" textAlignment="CENTER" textFill="#f39c12">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Label>

        <!-- Message de bienvenue -->
        <Label fx:id="welcomeLabel" text="Mode Invité" textAlignment="CENTER" textFill="#ecf0f1">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- Boutons du menu -->
        <VBox alignment="CENTER_LEFT" spacing="25">
            <Button fx:id="onePlayerBtn" onAction="#handleOnePlayer"
                    prefWidth="280" prefHeight="60" text="PARTIE 1 JOUEUR"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>

            <Button fx:id="twoPlayerBtn" onAction="#handleTwoPlayer"
                    prefWidth="280" prefHeight="60" text="PARTIE 2 JOUEURS"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>

            <Button fx:id="optionsButton" onAction="#handleOptions"
                    prefWidth="280" prefHeight="60" text="OPTIONS"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>

            <!-- Boutons de navigation -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="logoutButton" onAction="#handleLogout" text="DÉCONNEXION"
                        prefWidth="150" prefHeight="45" visible="false"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 22px; -fx-border-radius: 22px; -fx-cursor: hand;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>

                <Button fx:id="backToMenuButton" onAction="#handleBackToMenu" text="RETOUR À L'ACCUEIL"
                        prefWidth="200" prefHeight="45"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </VBox>
</StackPane>