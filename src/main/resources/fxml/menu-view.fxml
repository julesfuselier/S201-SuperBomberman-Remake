<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.superbomberman.controller.MenuController">

    <Label text="BOMBERMAN" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="15.0">
        <Button fx:id="onePlayerBtn" onAction="#startOnePlayerGame" prefWidth="200.0" text="1 JOUEUR">
            <font>
                <Font size="18.0" />
            </font>
        </Button>

        <Button fx:id="twoPlayerBtn" onAction="#startTwoPlayerGame" prefWidth="200.0" text="2 JOUEURS">
            <font>
                <Font size="18.0" />
            </font>
        </Button>

        <Button fx:id="quitBtn" onAction="#quitGame" prefWidth="200.0" text="QUITTER">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </VBox>

</VBox>