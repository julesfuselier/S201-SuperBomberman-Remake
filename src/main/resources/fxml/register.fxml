<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.superbomberman.controller.RegisterController"
            prefWidth="800" prefHeight="700"
            style="-fx-background: linear-gradient(to bottom, #1a1a2e, #16213e); -fx-border-color: #e74c3c; -fx-border-width: 3px;">

    <!-- Titre principal -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" bottom="30" />
            </padding>

            <!-- Logo/Image du jeu (optionnel) -->
            <!--
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../images/bomberman_logo.png" />
                </image>
            </ImageView>
            -->

            <Label text="SUPER BOMBERMAN" textAlignment="CENTER" textFill="#f39c12">
                <font>
                    <Font name="System Bold" size="42.0" />
                </font>
            </Label>

            <Label text="Rejoignez l'arène explosive !" textAlignment="CENTER" textFill="#ecf0f1">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <Separator prefWidth="500" style="-fx-background: #e74c3c;" />
        </VBox>
    </top>

    <!-- Formulaire d'inscription -->
    <center>
        <VBox fx:id="registerForm" alignment="CENTER" spacing="25" prefWidth="600">
            <padding>
                <Insets top="40" bottom="40" left="80" right="80" />
            </padding>

            <Label text="Créez votre compte Bomberman" textFill="#ecf0f1" textAlignment="CENTER">
                <font>
                    <Font size="24.0" style="-fx-font-weight: bold;" />
                </font>
            </Label>

            <VBox spacing="20" alignment="CENTER">
                <!-- Nom d'utilisateur -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Nom d'utilisateur" textFill="#bdc3c7" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" style="-fx-font-weight: bold;" />
                        </font>
                    </Label>
                    <TextField fx:id="registerUsername" prefWidth="300" prefHeight="40"
                               promptText="3+ caractères, lettres/chiffres uniquement"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 14px;">
                    </TextField>
                </VBox>

                <!-- Email -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Adresse Email (optionnel)" textFill="#bdc3c7" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" style="-fx-font-weight: bold;" />
                        </font>
                    </Label>
                    <TextField fx:id="registerEmail" prefWidth="300" prefHeight="40"
                               promptText="email@exemple.com"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 14px;">
                    </TextField>
                </VBox>

                <!-- Mot de passe -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Mot de passe" textFill="#bdc3c7" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" style="-fx-font-weight: bold;" />
                        </font>
                    </Label>
                    <PasswordField fx:id="registerPassword" prefWidth="300" prefHeight="40"
                                   promptText="4+ caractères minimum"
                                   style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 14px;">
                    </PasswordField>
                </VBox>

                <!-- Confirmation mot de passe -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Confirmer le mot de passe" textFill="#bdc3c7" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" style="-fx-font-weight: bold;" />
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPassword" prefWidth="300" prefHeight="40"
                                   promptText="Répétez le mot de passe"
                                   style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 14px;">
                    </PasswordField>
                </VBox>

                <!-- Personnage favori - VERSION CORRIGÉE -->
                <VBox spacing="8" alignment="CENTER">
                    <Label text="Personnage favori" textFill="#bdc3c7" textAlignment="CENTER">
                        <font>
                            <Font size="16.0" style="-fx-font-weight: bold;" />
                        </font>
                    </Label>
                    <ComboBox fx:id="favoriteCharacterComboBox" prefWidth="300" prefHeight="40"
                              style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-border-color: #34495e; -fx-border-radius: 8px; -fx-background-radius: 8px;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Bomberman" />
                                <String fx:value="Bomberman Blue" />
                                <String fx:value="Bomberman Red" />
                                <String fx:value="Bomberman Green" />
                                <String fx:value="Bomberman Yellow" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
            </VBox>

            <!-- Bouton d'inscription -->
            <Button fx:id="registerButton" onAction="#handleRegister" text="CRÉER MON COMPTE"
                    prefWidth="280" prefHeight="55"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-border-radius: 25px; -fx-cursor: hand;">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>

            <!-- Message de statut -->
            <Label fx:id="registerMessage" textAlignment="CENTER" wrapText="true" prefWidth="500" />

        </VBox>
    </center>

    <!-- Boutons de navigation -->
    <bottom>
        <HBox alignment="CENTER" spacing="25">
            <padding>
                <Insets top="20" bottom="25" left="25" right="25" />
            </padding>

            <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" text="SE CONNECTER"
                    prefWidth="220" prefHeight="45"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button fx:id="backToMenuButton" onAction="#handleBackToMenu" text="RETOUR A L'ACCUEIL"
                    prefWidth="220" prefHeight="45"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>


            <Button fx:id="exitButton" onAction="#handleExit" text="QUITTER"
                    prefWidth="120" prefHeight="45"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>