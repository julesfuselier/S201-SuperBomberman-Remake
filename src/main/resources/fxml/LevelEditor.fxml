<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.superbomberman.controller.LevelEditorController"
      spacing="10" alignment="CENTER">

    <HBox fx:id="toolbox" alignment="CENTER" spacing="10"/>

    <ScrollPane fx:id="scrollPane">
        <GridPane fx:id="editorGrid" alignment="CENTER"/>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="saveButton" text="Sauvegarder"/>
        <Button fx:id="loadButton" text="Charger"/>
        <Button fx:id="clearButton" text="Effacer tout"/>
        <Button text="Retour au menu" onAction="#handleBackToMenu"/>
    </HBox>

</VBox>