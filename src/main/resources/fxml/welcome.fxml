<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.superbomberman.controller.WelcomeController"
           prefWidth="600" prefHeight="385">

    <!-- Image de fond -->
    <ImageView fitWidth="700" fitHeight="900" preserveRatio="true">
        <Image url="@../images/menu_background.jpg" />
    </ImageView>

    <!-- Contenu principal -->
    <VBox alignment="CENTER_LEFT" spacing="30" style="-fx-background-color: transparent; -fx-border-color: #e74c3c; -fx-border-width: 3px;">
        <padding>
            <Insets bottom="50" left="50" right="50" top="50" />
        </padding>

        <!-- Titre du jeu -->


        <!-- Sous-titre -->
        <Label text="Bienvenue dans l'arène explosive !" textAlignment="CENTER" textFill="#ecf0f1">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- Boutons du menu principal -->
        <VBox alignment="CENTER_LEFT" spacing="25">
            <Button fx:id="guestButton" onAction="#handleGuestMode" text="JOUER EN TANT QU'INVITÉ"
                    prefWidth="320" prefHeight="60"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="loginButton" onAction="#handleLogin" text="CONNEXION"
                    prefWidth="320" prefHeight="60"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="registerButton" onAction="#handleRegister" text="INSCRIPTION"
                    prefWidth="320" prefHeight="60"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="exitButton" onAction="#handleExit" text="QUITTER"
                    prefWidth="320" prefHeight="60"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30px; -fx-border-radius: 30px; -fx-cursor: hand;">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </VBox>
    </VBox>
</StackPane>