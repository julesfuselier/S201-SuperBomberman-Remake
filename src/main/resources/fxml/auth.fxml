<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.superbomberman.controller.AuthController"
            prefWidth="800" prefHeight="650"
            style="-fx-background: linear-gradient(to bottom, #1a1a2e, #16213e); -fx-border-color: #e74c3c; -fx-border-width: 3px;">

    <!-- Titre principal -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" bottom="30" />
            </padding>

            <!-- Logo/Image du jeu (optionnel) -->
            <!--
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../images/bomberman_logo.png" />
                </image>
            </ImageView>
            -->

            <Label text="SUPER BOMBERMAN" textAlignment="CENTER" textFill="#f39c12">
                <font>
                    <Font name="System Bold" size="42.0" />
                </font>
            </Label>

            <Label text="Bienvenue dans l'arène explosive !" textAlignment="CENTER" textFill="#ecf0f1">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <Separator prefWidth="500" style="-fx-background: #e74c3c;" />
        </VBox>
    </top>

    <!-- Formulaires d'authentification -->
    <center >
        <TabPane fx:id="authTabPane" prefWidth="700" prefHeight="400" tabClosingPolicy="UNAVAILABLE"
                 style="-fx-background-color: transparent;" >

            <!-- Onglet Connexion -->
            <Tab text="CONNEXION" style="-fx-background-color: #34495e;" >
                <content>
                    <VBox fx:id="loginForm" alignment="CENTER" spacing="25">
                        <padding>
                            <Insets top="40" bottom="40" left="80" right="80" />
                        </padding>

                        <Label text="Connectez-vous à votre compte" textFill="#ecf0f1" textAlignment="CENTER">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>

                        <VBox spacing="20" alignment="CENTER">
                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <Label text="Nom d'utilisateur:" textFill="#bdc3c7" prefWidth="150">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="loginUsername" prefWidth="250" promptText="Entrez votre nom d'utilisateur"
                                           style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-pref-height: 40px;" />
                            </HBox>

                            <HBox spacing="15" alignment="CENTER_LEFT">
                                <Label text="Mot de passe:" textFill="#bdc3c7" prefWidth="150">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="loginPassword" prefWidth="250" promptText="Entrez votre mot de passe"
                                               style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-pref-height: 40px;" />
                            </HBox>

                            <CheckBox fx:id="rememberMe" text="Se souvenir de moi" textFill="#bdc3c7">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </CheckBox>
                        </VBox>

                        <Button fx:id="loginButton" onAction="#handleLogin" text="SE CONNECTER"
                                prefWidth="220" prefHeight="50"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-border-radius: 25px; -fx-cursor: hand;">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <Label fx:id="loginMessage" textAlignment="CENTER" wrapText="true" prefWidth="400" />
                    </VBox>
                </content>
            </Tab>

            <!-- Onglet Inscription -->
            <Tab text="INSCRIPTION" style="-fx-background-color: #34495e;">
                <content>
                    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="registerForm" alignment="CENTER" spacing="20">
                                <padding>
                                    <Insets top="30" bottom="30" left="80" right="80" />
                                </padding>

                                <Label text="Créez votre compte Bomberman" textFill="#ecf0f1" textAlignment="CENTER">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>

                                <VBox spacing="18" alignment="CENTER">
                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Label text="Nom d'utilisateur:" textFill="#bdc3c7" prefWidth="150">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="registerUsername" prefWidth="250" promptText="3+ caractères, lettres/chiffres uniquement"
                                                   style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 12px; -fx-pref-height: 35px;" />
                                    </HBox>

                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Label text="Email:" textFill="#bdc3c7" prefWidth="150">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="registerEmail" prefWidth="250" promptText="email@exemple.com (optionnel)"
                                                   style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 12px; -fx-pref-height: 35px;" />
                                    </HBox>

                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Label text="Mot de passe:" textFill="#bdc3c7" prefWidth="150">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <PasswordField fx:id="registerPassword" prefWidth="250" promptText="4+ caractères minimum"
                                                       style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 12px; -fx-pref-height: 35px;" />
                                    </HBox>

                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Label text="Confirmer:" textFill="#bdc3c7" prefWidth="150">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <PasswordField fx:id="confirmPassword" prefWidth="250" promptText="Répétez le mot de passe"
                                                       style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 12px; -fx-pref-height: 35px;" />
                                    </HBox>
                                </VBox>

                                <Button fx:id="registerButton" onAction="#handleRegister" text="S'INSCRIRE"
                                        prefWidth="220" prefHeight="50"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-border-radius: 25px; -fx-cursor: hand;">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Button>

                                <Label fx:id="registerMessage" textAlignment="CENTER" wrapText="true" prefWidth="400" />
                            </VBox>
                        </content>
                    </ScrollPane>
                </content>
            </Tab>
        </TabPane>
    </center>

    <!-- Boutons de navigation -->
    <bottom>
        <HBox alignment="CENTER" spacing="25">
            <padding>
                <Insets top="20" bottom="25" left="25" right="25" />
            </padding>

            <Button fx:id="guestButton" onAction="#handleGuestMode" text="JOUER EN INVITÉ"
                    prefWidth="180" prefHeight="45"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>

            <Button fx:id="exitButton" onAction="#handleExit" text="QUITTER"
                    prefWidth="120" prefHeight="45"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>