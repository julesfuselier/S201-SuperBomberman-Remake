<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.superbomberman.controller.AuthController"
            prefWidth="800" prefHeight="650"
            style="-fx-background: linear-gradient(to bottom, #1a1a2e, #16213e); -fx-border-color: #e74c3c; -fx-border-width: 3px;">

    <!-- Titre principal -->
    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" bottom="30" />
            </padding>

            <!-- Logo/Image du jeu (optionnel) -->
            <!--
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../images/bomberman_logo.png" />
                </image>
            </ImageView>
            -->

            <Label text="SUPER BOMBERMAN" textAlignment="CENTER" textFill="#f39c12">
                <font>
                    <Font name="System Bold" size="42.0" />
                </font>
            </Label>

            <Label text="Bienvenue dans l'arÃ¨ne explosive !" textAlignment="CENTER" textFill="#ecf0f1">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <Separator prefWidth="500" style="-fx-background: #e74c3c;" />
        </VBox>
    </top>

    <!-- Formulaire de connexion uniquement -->
    <center>
        <VBox fx:id="loginForm" alignment="CENTER" spacing="30" prefWidth="600" prefHeight="350"
              style="-fx-background-color: rgba(52, 73, 94, 0.8); -fx-background-radius: 15px; -fx-border-color: #34495e; -fx-border-radius: 15px; -fx-border-width: 2px;">
            <padding>
                <Insets top="50" bottom="50" left="80" right="80" />
            </padding>

            <Label text="Connexion" textFill="#ecf0f1" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Label>

            <VBox spacing="25" alignment="CENTER">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Nom d'utilisateur:" textFill="#bdc3c7" prefWidth="160">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <TextField fx:id="loginUsername" prefWidth="280" promptText="Entrez votre nom d'utilisateur"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-pref-height: 40px;" />
                </HBox>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Mot de passe:" textFill="#bdc3c7" prefWidth="160">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="loginPassword" prefWidth="280" promptText="Entrez votre mot de passe"
                                   style="-fx-background-color: #2c3e50; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-border-color: #34495e; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-pref-height: 40px;" />
                </HBox>

                <CheckBox fx:id="rememberMe" text="Se souvenir de moi" textFill="#bdc3c7">
                    <font>
                        <Font size="14.0" />
                    </font>
                </CheckBox>
            </VBox>

            <Button fx:id="loginButton" onAction="#handleLogin" text="SE CONNECTER"
                    prefWidth="250" prefHeight="55"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-border-radius: 25px; -fx-cursor: hand;">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>

            <Label fx:id="loginMessage" textAlignment="CENTER" wrapText="true" prefWidth="400" />
        </VBox>
    </center>

    <!-- Bouton de sortie uniquement -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="20" bottom="25" left="25" right="25" />
            </padding>

            <Button fx:id="exitButton" onAction="#handleExit" text="QUITTER"
                    prefWidth="140" prefHeight="50"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-cursor: hand;">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>